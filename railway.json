{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "backend": {
      "source": {
        "root": "backend"
      },
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "yarn start:prod",
        "healthcheckPath": "/wallet-profile/0x0000000000000000000000000000000000000000"
      }
    },
    "frontend": {
      "source": {
        "root": "frontend"
      },
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "yarn start"
      }
    }
  }
}